@model BookStore.Domain.ViewModels.AddCategoryViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="login-form">
                    <!--login form-->
                    <h2>Изменить категорию</h2>
                    <form method="post" asp-controller="Book" asp-action="EditCategory">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <input type="text" placeholder="Введите название категории" name="CategoryName" asp-for="CategoryName">
                        <span asp-validation-for="CategoryName"></span>

                        <textarea rows="5" maxlength="251" type="text" placeholder="Введите описание" name="Description" asp-for="Description"></textarea>
                        <span asp-validation-for="Description"></span>

                        <button type="submit" class="btn btn-default">Изменить</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section>