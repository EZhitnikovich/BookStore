@model BookStore.Domain.ViewModels.AddBookViewModel

@{
    ViewBag.Title = "Редактировать книгу";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="login-form">
                    <!--login form-->
                    <h2>Изменить книгу</h2>
                    <form method="post" asp-controller="Book" asp-action="EditBook">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <input type="text" placeholder="Enter book name" name="BookName" asp-for="BookName">
                        <span asp-validation-for="BookName"></span>

                        <textarea rows="5" maxlength="251" type="text" placeholder="Enter Description" name="Description" asp-for="Description"></textarea>
                        <span asp-validation-for="Description"></span>

                        <input type="date" placeholder="Enter PublicationDate" name="PublicationDate" asp-for="PublicationDate">
                        <span asp-validation-for="PublicationDate"></span>

                        <input type="text" placeholder="Enter Image" name="Image" asp-for="Image">
                        <span asp-validation-for="Image"></span>

                        <input placeholder="Enter Price" name="Price" asp-for="Price">
                        <span asp-validation-for="Price"></span>

                        <select asp-for="CategoryId" asp-items="ViewBag.Categories"></select>
                        <span asp-validation-for="CategoryId"></span>

                        <button type="submit" class="btn btn-default">Изменить</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section>