@model List<BookStore.Domain.Entities.Book>

@{
    ViewBag.Title = "BookStore";
    Layout = "_Layout";
}

<h2>title</h2>
<a asp-controller="Book" asp-action="Index">Book</a>
<a asp-controller="Account" asp-action="Logout">Logout</a>
<a asp-controller="Account" asp-action="Login">Login</a>
<a asp-controller="Account" asp-action="Register">Register</a>
<a asp-controller="Order" asp-action="Index">Orders</a>

@if (@User.Identity.IsAuthenticated)
{
    <a asp-controller="Account" asp-action="Index" asp-route-email="@User.Identity.Name">Account</a>
}

@foreach (var book in Model)
{
    <p>@book.BookName</p>
    <p>@book.Price</p>
    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id">Add to cart</a>
    <a asp-controller="Book" asp-action="AddRating" asp-route-id="@book.Id" asp-route-value="5">5</a>
    <a asp-controller="Book" asp-action="AddRating" asp-route-id="@book.Id" asp-route-value="4">4</a>
    <a asp-controller="Book" asp-action="AddRating" asp-route-id="@book.Id" asp-route-value="3">3</a>
    <a asp-controller="Book" asp-action="AddRating" asp-route-id="@book.Id" asp-route-value="2">2</a>
    <a asp-controller="Book" asp-action="AddRating" asp-route-id="@book.Id" asp-route-value="1">1</a>
    <hr/>
}

<form method="post" asp-controller="Home" asp-action="Index">
    <div class="container">
        <h1>Search</h1>
        <p>Please fill in this form to search.</p>
        <hr>

        <div>
            <input type="text" placeholder="Enter BookName" name="bookName">
        </div>

        <div>
            <input type="number" placeholder="Enter StartRating" name="startRating" id="StartRating">
        </div>

        <div>
            <input type="number" placeholder="Enter EndRating" name="endRating" id="EndRating">
        </div>

        <div>
            <input type="date" placeholder="Enter StartDate" name="startDate" id="StartDate">
        </div>

        <div>
            <input type="date" placeholder="Enter EndDate" name="endDate" id="EndDate">
        </div>

        <div>
            <select name="categoryId" asp-items="ViewBag.Categories"></select>
        </div>

        <hr>

        <input type="submit" class="addbtn" value="Add category"/>
    </div>
</form>