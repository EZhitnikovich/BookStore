@model BookStore.Domain.ViewModels.OrderViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="login-form">
                    <!--login form-->
                    <h2>Сделать заказ</h2>
                    <form method="post" asp-controller="Order" asp-action="MakeOrder" style="margin-bottom: 200px">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <input type="text" placeholder="Enter Phone Number" name="PhoneNumber" asp-for="PhoneNumber">
                        <span asp-validation-for="PhoneNumber"></span>

                        <input type="text" placeholder="Enter Address" name="Address" asp-for="Address">
                        <span asp-validation-for="Address"></span>

                        <input type="text" placeholder="Enter Information" name="Information" asp-for="Information">
                        <span asp-validation-for="Information"></span>

                        <button type="submit" class="btn btn-default">Заказать</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section>