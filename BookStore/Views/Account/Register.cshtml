@model BookStore.Domain.Auth.RegisterRequest

@{
    ViewBag.Title = "Registration";
    Layout = "_Layout";
}

<form method="post" asp-controller="Account" asp-action="Register" >
    <div class="container">
        <h1>Register</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>

        <label for="email"><b>First Name</b></label>
        <input type="text" placeholder="Enter first name" name="FirstName" id="firstName" asp-for="FirstName">
        <span asp-validation-for="FirstName"/>
        
        <label for="email"><b>Last Name</b></label>
        <input type="text" placeholder="Enter last name" name="LastName" id="lastName" asp-for="LastName">
        
        <label for="email"><b>Email</b></label>
        <input type="text" placeholder="Enter Email" name="Email" id="email" asp-for="Email">

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="Password" id="psw" asp-for="Password">

        <label for="psw-repeat"><b>Confirm Password</b></label>
        <input type="password" placeholder="Repeat Password" name="ConfirmPassword" id="psw-repeat" asp-for="ConfirmPassword">
        <hr>

        <input type="submit" class="registerbtn" value="Register"/>
    </div>
</form>